<%- include('header') %>

<div class="ui grid">
  <div class="four wide column"></div>
  <div class="eight wide column">
    <form action="" class="ui form segment" method="post" enctype="mulitipart/form-data">
      <div class="field required">
        <label for="">用户名</label>
        <input type="text" placeholder="用户名" name="name">
      </div>
      <div class="field required">
        <label for="">密码</label>
        <input type="password" type="password" name="password">
      </div>
      <div class="field required">
        <label for="">重复密码</label>
        <input type="password" type="password" name="repassword">
      </div>
      <div class="field required">
        <label for="">性别</label>
        <select name="gender" id="" class="ui compact selection dropdown">
          <option value="m">男</option>
          <option value="f">女</option>
          <option value="x">保密</option>
        </select>
      </div>
      <div class="field required">
        <label for="">头像</label>
        <input type="file" name="avatar">
      </div>
      <div class="field required">
        <label for="">个人简历</label>
        <textarea name="bio" rows="5" v-model="user.bio"></textarea>
      </div>
      <input type="submit" class="ui button fluid" value="注册">
    </form>
  </div>
</div>

<%- include('footer') %>
